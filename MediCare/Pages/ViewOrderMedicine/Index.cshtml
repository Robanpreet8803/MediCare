@page
@model MediCare.Pages.OrderViewMedicine.IndexModel

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
    <a asp-page="Create" class="btn btn-info">Click here to Order Medicine</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderMedicine[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderMedicine[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderMedicine[0].MedicineId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderMedicine[0].Strips)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderMedicine)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicineId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Strips)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-info" asp-route-id="@item.id">Edit</a>
                    <a asp-page="./Details" class="btn btn-info" asp-route-id="@item.id">Details</a>
                    <a asp-page="./Delete" class="btn btn-info" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
