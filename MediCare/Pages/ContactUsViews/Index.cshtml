@page
@model MediCare.Pages.ContactUsViews.IndexModel

@{
    ViewData["Title"] = "ContactUs";
}

<p>
    <a asp-page="Create" class="btn btn-info">Contact Us</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactUs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-info" asp-route-id="@item.id">Edit</a>
                <a asp-page="./Details" class="btn btn-info" asp-route-id="@item.id">Details</a>
                <a asp-page="./Delete" class="btn btn-info" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
